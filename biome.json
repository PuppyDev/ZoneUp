{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git"
    },
    "files": {
        "ignore": [".next", ".yarn", ".node_modules", "public"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noEmptyInterface": "off"
            },
            "a11y": {
                "noSvgWithoutTitle": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentWidth": 4,
        "lineWidth": 100,
        "indentStyle": "space",
        "formatWithErrors": false
    },
    "organizeImports": {
        "enabled": true
    }
}
